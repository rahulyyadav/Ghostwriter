# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_WORKSPACE_ID=T123ABC
SLACK_SIGNING_SECRET=your-signing-secret

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Signal Gate Thresholds (optional - defaults provided)
MIN_MESSAGES=8
MIN_PARTICIPANTS=2
MIN_AVG_WORDS=15
MIN_TOTAL_WORDS=120
MIN_DURATION_MIN=5
MAX_DURATION_HOURS=6
MIN_VELOCITY=1
MAX_VELOCITY=10
MIN_AGE_MIN=5
MIN_ENGAGEMENT=0.25
REQUIRE_QUESTION=true
MIN_UNIQUENESS=0.4

# Summary Compression (optional)
COMPRESS_MSG_COUNT=5
COMPRESS_WORD_COUNT=300
COMPRESS_MINUTES=15
MAX_SUMMARY_WORDS=250
COMPRESS_MAX_RETRIES=3

# Insight Detection (optional)
INSIGHT_CONFIDENCE=0.7
INSIGHT_COOLDOWN_MIN=60

# Gemini Rate Limits (optional)
GEMINI_RPM=15
GEMINI_RPD=1000
GEMINI_TIMEOUT=30000

# Conversation TTL (optional)
CONVERSATION_TTL_HOURS=6
CLEANUP_INTERVAL_HOURS=12

# Notification (optional)
NOTIFICATION_METHOD=channel

# Feature Flags (optional)
ENABLE_INSIGHT_DETECTION=true
ENABLE_SUMMARY_COMPRESSION=true
DRY_RUN_MODE=false

# Logging (optional)
LOG_LEVEL=info
LOG_PRETTY=true
